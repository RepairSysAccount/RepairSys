    <!-- Spring整合Mybatis -->
    <context:property-placeholder location="classpath:datasource.properties" />
    <context:component-scan base-package="com.repair" />
    <!--数据库的连接池 -->
    <bean id="dataSource" class="org.apache.commons.dbcp.BasicDataSource" destroy-method="close">
        <property name="driverClassName" value="com.microsoft.sqlserver.jdbc.SQLServerDriver" />
        <property name="url" value="jdbc:sqlserver://localhost:1433;DatabaseName=db_RepairSys" />
        <property name="username" value="sa" />
        <property name="password" value="123456" />
    </bean>

    <!-- 配置SqlSessionFactory对象-->
    <bean id="sqlSessionFactory" class="org.mybatis.spring.SqlSessionFactoryBean">
        <!-- 注入数据库连接池 -->
        <property name="dataSource" ref="dataSource"></property>
        <!-- 配置mybatis的全部配置文件 mybatis-config -->
        <property name="configLocation" value="mybatis-config.xml"></property>
        <!-- 扫描entity包 使用别名 -->
        <property name="typeAliasesPackage" value="com.repair.entity"></property>
        <!-- 扫描sql配置文件:mapper需要的配置文件 -->
        <property name="mapperLocations" value="mappers/*.xml"></property>
    </bean>

    <!-- 配置扫描Dao接口的包,动态实现Dao接口，注入到Spring容器中去 -->
    <bean class="org.mybatis.spring.mapper.MapperScannerConfigurer">
        <!-- 给出需要扫描的Dao接口包 -->
        <property name="basePackage" value="com.repair.dao" />
        <!-- 注入sqlsessionFactory -->
        <property name="sqlSessionFactoryBeanName" value="sqlSessionFactory" />
    </bean>


</beans>